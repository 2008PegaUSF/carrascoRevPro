package questions;

public class Q13 {
	public static int tri01() {//create method
	int x = 0;//set initial value
	System.out.println(x);//first line of tri
	
	for (int y = 0; y<= 1; y+=1) { //nested loop that generates next  2 lines of pyramid
		for (int z = 0; z<=y ; z++) {//the first iteration prints 1 
			System.out.print( x + 1);
				if (z%2 == 0) {        //first iteration then prints 0
					System.out.print(x);
				}
			}
			System.out.print("\n");
		}
	for (int i = 0; i < 3; i+=2) { //nest if statement within for loop to generate last line of pyramid
		if (i%2 == 0) {
			System.out.print(x);
		}
		System.out.print(x+1);
	}
	System.out.println("\n");
	return x;
	}
}